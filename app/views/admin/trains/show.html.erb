
<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<strong>На станции:</strong>
  <% if @train.current_station.present? %>
    <%= @train.current_station.title %>
  <% else %>
    Не указано
  <% end %>
</p>

<strong>Маршрут поезда:</strong>
  <% if @train.route.present? %>
    <%= @train.route.title %>
  <% else %>
    Маршрут не назначен
  <% end %>
<br>
<br>

<h1>Вагоны поезда <%= @train.number %>:</h1>

<% @train.sorted_wagons.each do |wagon| %>
  <p><%= link_to "#{wagon.number}", train_wagon_path(@train, wagon) %></p>
<% end %>

<p>
  <%= link_to "Добавить вагон", new_admin_train_wagon_path(@train) %>
</p>

<br>

<%= link_to 'Edit', edit_admin_train_path(@train) %> |
<%= link_to 'Back', admin_trains_path %>
