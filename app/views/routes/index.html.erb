<p id="notice"><%= notice %></p>

<h1>Маршрутов список</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.title %></td>
        <td><%= link_to 'Показать', route %></td>
        <td><%= link_to 'Редактир', edit_route_path(route) %></td>
        <td><%= link_to 'Делит', route, method: :delete, data: { confirm: 'Серьезно удалить?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

