<p id="notice"><%= notice %></p>

<p>
  <strong>Название:</strong>
  <%= @route.title %>
</p>

<p>станции в маршруте: </p>

<% if @route.railway_stations.empty? %>
  <p> Список пуст  </p>
<% else %>
 
<table>
  <thead>
    <tr>
      <td width="200px">Название</td>
      <td>Позиция</td>
    </tr>
  </thead>
  <tbody>
    <% @route.railway_stations.station_number_to_station.sorted.each do |station| %>
      <tr>
        <td><%= station.title %></td>
        <td><%= station.station_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
<p>поездов на этом маршруте: </p>
<% if @route.trains.empty? %>
  <p>Поездов нет в маршруте</p>
<% else %>
  <% @route.trains.each do |train| %>
  <%= train.number %>
<% end %>
<% end %> 
<br>
<br>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
